<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cast_image"
        android:layout_width="@dimen/profile_width"
        android:layout_height="@dimen/profile_height"
        android:layout_margin="4dp"
        android:background="?attr/bgPrimary"
        android:contentDescription="@string/image_of_the_cast_member" />

    <TextView
        android:id="@+id/cast_name"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="@dimen/profile_width_text"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/bg_rounded_transparent_bottom"
        android:elevation="@dimen/elevation_large"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="4dp"
        android:textAlignment="center"
        android:textColor="?attr/typePrimary"
        tools:text="Taras Koshkin" />

    <TextView
        android:id="@+id/cast_role"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="@dimen/profile_width_text"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:background="@drawable/bg_rounded_transparent_top"
        android:elevation="@dimen/elevation_large"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingStart="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:textAlignment="center"
        android:textColor="?attr/typePrimary"
        tools:text="Taras Koshkin" />

</FrameLayout>