<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgPrimary"
    android:elevation="@dimen/elevation_small"
    android:orientation="vertical"
    android:padding="@dimen/default_padding"
    tools:layout_width="200dp">

    <ImageView
        android:id="@+id/review_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/review_image"
        android:src="@drawable/vd_face"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/review_name"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:textColor="?attr/typeSecondary"
        app:layout_constraintBottom_toBottomOf="@id/review_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/review_image"
        app:layout_constraintTop_toTopOf="@id/review_image"
        tools:text="Name" />

    <TextView
        android:id="@+id/review_content"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="8 "
        android:textColor="?attr/typePrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_image"
        app:layout_constraintVertical_bias="0"
        tools:text="adlfjasdflkj alsdfkjas lkjasd flakjdf  laskdjf s lfkjasd fa slfkjas fasld flaskjdf asldfjasdf asdflkajsf slfj asldfj alsdfj sdlkfj alsdkfj asldfj alsdjf aldfkj asdlfkj asdlfkaj sdf" />

</androidx.constraintlayout.widget.ConstraintLayout>